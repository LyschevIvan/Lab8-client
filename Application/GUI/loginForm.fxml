<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<VBox
      xmlns:fx="http://javafx.com/fxml" alignment="center"

      spacing="20">
    <ImageView fx:id="imageView" >
    </ImageView>
    <HBox fx:id="loginBox" alignment="CENTER" spacing="10">
        <Label fx:id="loginLabel">Введите логин:</Label>
        <TextField fx:id="loginField"/>
    </HBox>
    <HBox fx:id="passBox" alignment="CENTER" spacing="10">
        <Label fx:id="passLabel">Введите пароль:</Label>
        <TextField fx:id="passField"/>
    </HBox>
    <HBox fx:id="buttonsBox" alignment="CENTER" spacing="30">
        <Button fx:id="enterBtn" onAction="#enterBtn">Войти</Button>
        <Button fx:id="regBtn" onAction="#regBtn">Зарегистрироваться</Button>
    </HBox>
    <Label fx:id="wrongLabel" textFill="red"/>
</VBox>